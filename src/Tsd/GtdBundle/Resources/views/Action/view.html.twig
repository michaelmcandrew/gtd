    <p>Project: <a href="{{ path('tsd_gtd_project_view', {'id': action.project.id}) }}">{{action.project.name}}</a></p>
{% endif %}
<p><a href="{{ path('tsd_gtd_action_edit', {'id': action.id}) }}">Edit</a>
